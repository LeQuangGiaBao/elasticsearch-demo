          "name": "Basic Text Search",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products/search?query=sauvage",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products", "search"],
