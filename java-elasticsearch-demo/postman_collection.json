{
  "info": {
    "name": "Elasticsearch Demo API",
    "description": "Collection for testing Elasticsearch Demo endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Products",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Sauvage Dior\",\n  \"description\": \"A fresh and powerful fragrance with notes of bergamot and pepper\",\n  \"price\": 2500000,\n  \"gender\": \"MALE\",\n  \"sillage\": \"STRONG\",\n  \"longevity\": \"LONG_LASTING\",\n  \"brand\": \"Dior\",\n  \"concentration\": \"EDT\"\n}"
            },
            "url": {
              "raw": "http://localhost:8080/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products"]
            }
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "http://localhost:8080/api/products",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8080",
              "path": ["api", "products"]
            }
          }
        },
        {
